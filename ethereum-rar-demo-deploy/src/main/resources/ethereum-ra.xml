<?xml version="1.0" encoding="UTF-8"?>
<resource-adapters xmlns="http://www.jboss.org/ironjacamar/schema"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.jboss.org/ironjacamar/schema http://www.jboss.org/ironjacamar/schema/ironjacamar_1_0.xsd">
    
    <resource-adapter>
        <archive>ethereum-ra.rar</archive>
        <config-property name="nodeLocation">http://localhost:8545</config-property>
    
        <connection-definitions>  
            <connection-definition class-name="be.e_contract.ethereum.ra.EthereumManagedConnectionFactory"
                                   jndi-name="java:/EthereumConnectionFactory">
                <config-property name="nodeLocation">http://localhost:8545</config-property>
            </connection-definition>
        </connection-definitions>
    </resource-adapter>
    
</resource-adapters>
